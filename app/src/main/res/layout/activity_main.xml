<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dl_main"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/toobal_title"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/rl_end"
            android:layout_marginLeft="@dimen/normal_10dp"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/me"
                />
        </RelativeLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gary" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:image_scale_type="fit_xy"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_10dp"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/total"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/totalGSC"
                android:textColor="@color/black_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_10dp"
                />
            <com.hjzn.wallet.weight.RaiseNumberAnimTextView
                android:id="@+id/tv_totalnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black_text"
                />
        </LinearLayout>
        <View
            style="@style/haveing"
            android:layout_marginLeft="@dimen/normal_10dp"
            android:layout_marginRight="@dimen/normal_10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/normal_10dp"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/put_forward"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:text="@string/usableGSc"
                android:textColor="@color/black_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.hjzn.wallet.weight.RaiseNumberAnimTextView
                    android:id="@+id/tv_usernum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black_text"
                    />
                <Button
                    android:id="@+id/btn_submit"
                    android:text="提币"
                    android:textColor="@color/blueviolet"
                    android:textSize="13sp"
                    android:layout_width="@dimen/normal_60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@drawable/shape_home_btnbg"
                    />
            </LinearLayout>
        </LinearLayout>
                <View
                    style="@style/haveing"
                    android:layout_marginLeft="@dimen/normal_10dp"
                    android:layout_marginRight="@dimen/normal_10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_10dp"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/icon_yeji"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/yejijiang"
                        android:textColor="@color/black_text"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        />

                    <com.hjzn.wallet.weight.RaiseNumberAnimTextView
                        android:id="@+id/tv_yejinum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black_text"
                        />
                    <Button
                        android:id="@+id/btn_tixin"
                        android:text="提币"
                        android:textColor="@color/blueviolet"
                        android:textSize="13sp"
                        android:layout_width="@dimen/normal_60dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:background="@drawable/shape_home_btnbg"
                        />
                </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/garycc"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/gary"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/garycc"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_10dp"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/price"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/realtimeprice"
                android:textColor="@color/black_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_10dp"
                />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.154"
                android:textColor="#F87d4f"
                />
        </LinearLayout>
        <View
            style="@style/haveing"
            android:layout_marginLeft="@dimen/normal_10dp"
            android:layout_marginRight="@dimen/normal_10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_10dp"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/shareholdernumber"
                android:textColor="@color/black_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_10dp"
                />
            <TextView
                android:id="@+id/tv_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无"
                android:textColor="@color/black_text"
                />
        </LinearLayout>
        <View
            style="@style/haveing"
            android:layout_marginLeft="@dimen/normal_10dp"
            android:layout_marginRight="@dimen/normal_10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_10dp"
            >
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/rate"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/rate"
                android:textColor="@color/black_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_10dp"
                />
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/black_text"
                />
        </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    </RelativeLayout>

            <android.support.design.widget.NavigationView
                android:id="@+id/nav"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:headerLayout="@layout/head"
                app:menu="@menu/new_menu"

                >

            </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>