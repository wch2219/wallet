<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.RecomActivity">
    <include
        layout="@layout/toobal_title"
        />
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="150dp"
            android:background="@drawable/shape_recom_bg"
            android:layout_marginTop="@dimen/dp_20"
            >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/normal_10dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/zws3"
            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/normal_30dp"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的推荐码："
                android:textColor="@color/black_text"
                />
            <TextView
                android:id="@+id/tv_recomcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black_text"
                android:text="无"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/normal_10dp"
            android:layout_gravity="center_horizontal"
            >
            <View
                android:layout_width="@dimen/normal_30dp"
                style="@style/haveing"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/blueviolet"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要分享"
                    android:layout_marginLeft="@dimen/normal_10dp"
                    android:layout_marginRight="@dimen/normal_10dp"
                    />

            <View
                android:layout_width="@dimen/normal_30dp"
                android:layout_height="1dp"
                style="@style/haveing"
                android:layout_gravity="center_vertical"
                android:background="@color/blueviolet"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:layout_marginRight="@dimen/normal_30dp"
            android:layout_marginTop="@dimen/dp_20"
            >
            <LinearLayout
                android:id="@+id/ll_shareqq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/normal_30dp"
                    android:layout_height="@dimen/normal_30dp"
                    android:src="@mipmap/qq"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textColor="@color/black_text"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sharqwx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/normal_30dp"
                    android:layout_height="@dimen/normal_30dp"
                    android:src="@mipmap/weixin"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="@color/black_text"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_pyq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/normal_30dp"
                    android:layout_height="@dimen/normal_30dp"
                    android:src="@mipmap/pengyouquan"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textColor="@color/black_text"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_wb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="@dimen/normal_30dp"
                    android:layout_height="@dimen/normal_30dp"
                    android:src="@mipmap/weibo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微博"
                    android:textColor="@color/black_text"

                    />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>