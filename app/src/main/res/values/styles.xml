<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blueviolet</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--分隔线-->
    <style name="haveing">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/havling</item>
    </style>

    <color name="havling">#e5e5e5</color>


    <style name="edittext_blue" parent="Theme.AppCompat.Light" >
        <item name="colorControlNormal">@color/color_dddddd</item>
        <item name="colorControlActivated">@color/color_999999</item>
    </style>

    <style name="edittext_gray_black_normal" parent="Theme.AppCompat.Light" >
        <item name="colorControlNormal">@color/color_cccccc</item>
        <item name="colorControlActivated">@color/color_999999</item>
    </style>

    <style name="TableLayoutTextStyle">
        <item name="android:textSize">@dimen/normal_txt_12sp</item>
    </style>


    <!--底部弹框-->
    <style name="BottomDialog" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- 黑色正常大小的文字 -->
    <style name="style_black_normal_text">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingRight">@dimen/spacing_tiny</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 分割线 -->
    <style name="style_separate_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/gray_line</item>
    </style>


    <style name="layout_input_amount_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">2px</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <!--键盘数字-->
    <style name="btn_input_num_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:background">@drawable/selector_item_pressed</item>
    </style>


    <style name="RedEditTextUnderLine" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_ff4040</item>
        <item name="colorControlActivated">@color/color_ff4040</item>
    </style>

    <style name="GrayEditTextUnderLine" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_999999</item>
        <item name="colorControlActivated">@color/color_999999</item>
    </style>

    <style name="FirstTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/img_qidongye</item>
    </style>
</resources>
